extends base
block content 
    main
      article
        //
          - #MOVIE DETAIL
        section.movie-detail
          .container
            figure.movie-detail-banner
              img(src='/assets/images/movie-4.png', alt='Free guy movie poster')
              button.play-btn
                ion-icon(name='play-circle-outline')
            .movie-detail-content
              p.detail-subtitle New Episodes
              h1.h1.detail-title
                | Free 
                strong Guy
              .meta-wrapper
                .badge-wrapper
                  .badge.badge-fill PG 13
                  .badge.badge-outline HD
                .ganre-wrapper
                  a(href='#') Comedy,
                  a(href='#') Action,
                  a(href='#') Adventure,
                  a(href='#') Science Fiction
                .date-time
                  div
                    ion-icon(name='calendar-outline')
                    time(datetime='2021') 2021
                  div
                    ion-icon(name='time-outline')
                    time(datetime='PT115M') 115 min
              p.storyline
                | A bank teller called Guy realizes he is a background character in an open world video game called Free
                | City that will
                | soon go offline.
              .details-actions
                button.share
                  ion-icon(name='share-social')
                  span Share
                .title-wrapper
                  p.title Prime Video
                  p.text Streaming Channels
                button.btn.btn-primary
                  ion-icon(name='play')
                  span Watch Now
              a.download-btn(href='/assets/images/movie-4.png', download='')
                span Download
                ion-icon(name='download-outline')
        //
          - #TV SERIES
        section.tv-series
          .container
            p.section-subtitle Best TV Series
            h2.h2.section-title World Best TV Series
            ul.movies-list
              li
                .movie-card
                  a(href='/movie-details.html')
                    figure.card-banner
                      img(src='/assets/images/series-1.png', alt='Moon Knight movie poster')
                  .title-wrapper
                    a(href='./movie-details.html')
                      h3.card-title Moon Knight
                    time(datetime='2022') 2022
                  .card-meta
                    .badge.badge-outline 2K
                    .duration
                      ion-icon(name='time-outline')
                      time(datetime='PT47M') 47 min
                    .rating
                      ion-icon(name='star')
                      data 8.6
              li
                .movie-card
                  a(href='./movie-details.html')
