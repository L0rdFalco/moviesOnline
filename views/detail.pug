extends base
block content 
    main
      article
        //
          - #MOVIE DETAIL
        section.movie-detail
          .container
            figure.movie-detail-banner
              -let path =data.poster_path?`https://image.tmdb.org/t/p/w500/${data.poster_path}`:`https://image.tmdb.org/t/p/w500/bwrDzLHjU1g5Us1eCjmnY8IQBRf.jpg`
       
              img(src=`https://image.tmdb.org/t/p/w500${path}`, alt=`${data.name} movie poster`)
              button#playBtn.play-btn
                ion-icon(name='play-circle-outline')
            .movie-detail-content
              p.detail-subtitle Fast streaming version
              h1#titleDisplay.h1.detail-title
                strong= data.title
                strong= data.name
              .meta-wrapper
                .badge-wrapper
                  .badge.badge-fill PG 132
                  .badge.badge-outline HD
                .ganre-wrapper
                  each genre in data.genres
                    a(href=`/similar/${data.id}`)= `${genre.name},`

                .date-time
                  div
                    ion-icon(name='calendar-outline')
                    //- data= data.release_date.split("-")[0]
                  div
                    ion-icon(name='time-outline')
                    time(datetime='PT115M') 115 min
              p.storyline= data.overview
              .details-actions
                button.share
                  ion-icon(name='share-social')
                  span Share
                .title-wrapper
                  p.title Prime Video
                  p.text Streaming Channels
                button#watchBtn.btn.btn-primary
                  ion-icon(name='play')
                  span Watch Now
                    //- .badge.badge-outline  HD    
              a.download-btn(href='https://avantofiles.com/1316137', download='')
                span Download
                ion-icon(name='download-outline')
